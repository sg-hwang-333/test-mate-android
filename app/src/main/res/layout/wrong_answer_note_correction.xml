<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="26.5dp"
                android:paddingBottom="26.5dp"
                android:paddingLeft="25dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/wrong_answer"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/before_btn"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="40dp"
                    android:textSize="@dimen/M16"
                    android:textColor="@color/black.800"
                    android:text="1.(물음)이 이야기의 내용과 일치하는 사실은?"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="고등학교 1학년"
                    android:textColor="@color/black.700"
                    android:textSize="@dimen/R12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:padding="2dp"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/bg_white_view"
                    android:src="@drawable/problem_ex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="40dp"
                    android:textSize="@dimen/M14"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/black.800"
                    android:text="풀이"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:background="@drawable/bg_white_view"
                    android:hint="풀이를 입력해 주세요"
                    android:textSize="@dimen/R14"
                    android:gravity="top"
                    android:textColorHint="@color/black.200_1"
                    android:paddingLeft="16dp"
                    android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="145dp"/>

                <TextView
                    android:layout_marginTop="40dp"
                    android:textSize="@dimen/M14"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/black.800"
                    android:text="시험 스타일"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:background="@drawable/bg_white_view"
                    android:hint="시험 스타일을 입력해 주세요"
                    android:textSize="@dimen/R14"
                    android:gravity="top"
                    android:textColorHint="@color/black.200_1"
                    android:paddingLeft="16dp"
                    android:paddingTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="78dp"/>
                <LinearLayout
                    android:layout_marginTop="40dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/M14"
                        android:textColor="@color/black.800"
                        android:text="오답이유"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/ion_edit"
                        android:layout_marginLeft="7dp"
                        android:layout_width="18dp"
                        android:layout_height="18dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.widget.Button
                        android:layout_marginRight="8dp"
                        android:layout_width="58dp"
                        android:layout_height="34dp"
                        android:text="@string/reason_mistake"
                        android:textColor="@color/white"
                        android:background="@drawable/bg_green_view"
                        android:textSize="@dimen/M14"
                        android:gravity="center"
                        android:stateListAnimator="@null"/>
                    <android.widget.Button
                        android:layout_marginRight="8dp"
                        android:layout_width="87dp"
                        android:layout_height="34dp"
                        android:text="@string/reason_timeout"
                        android:textColor="@color/black.300"
                        android:background="@drawable/bg_white_view"
                        android:textSize="@dimen/M14"
                        android:gravity="center"
                        android:stateListAnimator="@null"/>
                    <android.widget.Button
                        android:layout_width="87dp"
                        android:layout_height="34dp"
                        android:text="@string/reason_lackconcept"
                        android:textColor="@color/black.300"
                        android:background="@drawable/bg_white_view"
                        android:textSize="@dimen/M14"
                        android:gravity="center"
                        android:stateListAnimator="@null"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="40dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/M14"
                        android:textColor="@color/black.800"
                        android:text="문제 범위"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/ion_edit"
                        android:layout_marginLeft="7dp"
                        android:layout_width="18dp"
                        android:layout_height="18dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.widget.Button
                        android:layout_gravity="right"
                        android:layout_marginRight="8dp"
                        android:layout_width="58dp"
                        android:layout_height="34dp"
                        android:text="@string/scope_1"
                        android:textColor="@color/white"
                        android:background="@drawable/bg_green_view"
                        android:textSize="@dimen/M14"
                        android:gravity="center"
                        android:stateListAnimator="@null"/>

                    <android.widget.Button
                        android:layout_marginRight="8dp"
                        android:layout_width="71dp"
                        android:layout_height="34dp"
                        android:text="@string/scope_3"
                        android:textColor="@color/black.300"
                        android:background="@drawable/bg_white_view"
                        android:textSize="@dimen/M14"
                        android:gravity="center"
                        android:stateListAnimator="@null"/>
                    <android.widget.Button
                        android:layout_marginRight="8dp"
                        android:layout_width="71dp"
                        android:layout_height="34dp"
                        android:text="@string/scope_4"
                        android:textColor="@color/black.300"
                        android:background="@drawable/bg_white_view"
                        android:textSize="@dimen/M14"
                        android:gravity="center"
                        android:stateListAnimator="@null"/>

                </LinearLayout>

                <LinearLayout
                    android:gravity="right"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="40dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.widget.Button
                        android:layout_marginRight="8dp"
                        android:layout_width="70dp"
                        android:layout_height="42dp"
                        android:text="@string/delete"
                        android:textColor="@color/red_1"
                        android:background="@drawable/border_delete_view"
                        android:textSize="@dimen/M16"
                        android:gravity="center"
                        android:stateListAnimator="@null"/>

                    <android.widget.Button
                        android:layout_width="70dp"
                        android:layout_height="42dp"
                        android:text="@string/edit"
                        android:textColor="@color/white"
                        android:background="@drawable/bg_green_view"
                        android:textSize="@dimen/M16"
                        android:gravity="center"
                        android:stateListAnimator="@null"/>
                </LinearLayout>

                <android.widget.Button
                    android:layout_width="71dp"
                    android:layout_height="34dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/bg_white_view"
                    android:gravity="center"
                    android:stateListAnimator="@null"
                    android:text="@string/scope_2"
                    android:textColor="@color/black.300"
                    android:textSize="@dimen/M14" />

            </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:elevation="10dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:background="@android:color/transparent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/home_off" />
        <ImageButton
            android:background="@android:color/transparent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/note_on" />
        <ImageButton
            android:background="@android:color/transparent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/goal_off" />
        <ImageButton
            android:background="@android:color/transparent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/cal_off"/>

    </LinearLayout>

</LinearLayout>